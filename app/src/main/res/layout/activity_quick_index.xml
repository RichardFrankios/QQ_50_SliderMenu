<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_quick_index"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 数据ListView -->
    <ListView
        android:id="@+id/lv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!-- 字母Bar -->
    <com.wsj.www.qq50slider.quick_index_table.QuickIndexBar
        android:id="@+id/qid_bar"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:background="#B51421"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_index_view"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/index_bg"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_height="100dp"/>







</RelativeLayout>
